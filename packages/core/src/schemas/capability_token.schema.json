{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "title":"CapabilityToken",
  "type":"object",
  "required":["iss","sub","act","res","iat","exp","ver","jti","scope"],
  "properties":{
    "iss":{"type":"string"},
    "sub":{"type":"string"},
    "act":{"type":"string"},
    "res":{"type":"string"},
    "scope":{"type":"array","items":{"type":"string"}},
    "limits":{"type":"object","additionalProperties":true},
    "iat":{"type":"integer"},
    "exp":{"type":"integer"},
    "ver":{"type":"string","const":"aiep-ct-1"},
    "jti":{"type":"string"}
  }
}
